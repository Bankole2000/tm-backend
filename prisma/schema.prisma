generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SongRequest {
  id            String    @id @default(uuid())
  title         String
  artist        String
  requestedBy   String    @default("Anonymous")
  hasBeenPlayed Boolean   @default(false)
  requestedAt   DateTime  @default(now())
  playedAt      DateTime? @updatedAt
}

model Performance {
  id                   String   @id @default(uuid())
  videoNumber          Int?     @default(1)
  videoURL             String?
  songName             String?
  artistName           String?
  albumName            String?
  yesOrNo              Boolean? @default(false)
  videoLength          String?
  videoLengthInSeconds Int      @default(1)
  mainGenre            String?
  subGenre             String?
  otherGenres          String[] @default([])
  uploadDate           DateTime?
}

model Genre {
  genre        String      @id
  genreName    String
  SongGenres   SongGenre[]
}

model Song {
  id              String      @id @default(uuid())
  videoNo         Int
  tiktokVideoLink String
  songName        String
  artistName      String
  albumName       String
  spotifyId       String?
  videoLength     String
  YesNo           Boolean
  songGenres      SongGenre[]
  audioUrl        String?
}

model SongGenre {
  songId  String
  genreId String
  Song    Song   @relation(fields: [songId], references: [id], onDelete: Cascade)
  Genre   Genre  @relation(fields: [genreId], references: [genre], onDelete: Cascade)

  @@id([songId, genreId])
}
