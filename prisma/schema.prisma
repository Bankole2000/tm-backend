generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SongRequest {
  id            String    @id @default(uuid())
  title         String
  artist        String
  requestedBy   String    @default("Anonymous")
  hasBeenPlayed Boolean   @default(false)
  requestedAt   DateTime  @default(now())
  playedAt      DateTime? @updatedAt
}

model Performance {
  id                   String   @id @default(uuid())
  videoNumber          Int?     @default(1)
  videoURL             String?
  songName             String?
  artistName           String?
  albumName            String?
  yesOrNo              Boolean? @default(false)
  videoLength          String?
  videoLengthInSeconds Int      @default(1)
  mainGenre            String?
  subGenre             String?
  otherGenres          String[] @default([])
}
